<h1>New artist</h1>

<% form_for(@artist) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :genre %><br />
    <%= f.text_field :genre %>
  </p>
  <p>
    <%= f.label :bio %><br />
    <%= f.text_area :bio %>
  </p>
  <p>
    <%= f.label :link %><br />
    <%= f.text_field :link %>
  </p>
  <p>
    <%= f.label :album_cover %><br />
    <%= f.text_field :album_cover %>
  </p>
  <p>
    <%= f.label :discography %><br />
    <%= f.text_area :discography %>
  </p>
  <p>
    <%= f.label :blurb %><br />
    <%= f.text_field :blurb %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', artists_path %>