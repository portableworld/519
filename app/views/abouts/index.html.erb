<h1>Listing abouts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Bio</th>
  </tr>

<% @abouts.each do |about| %>
  <tr>
    <td><%=h about.name %></td>
    <td><%=h about.bio %></td>
    <td><%= link_to 'Show', about %></td>
    <td><%= link_to 'Edit', edit_about_path(about) %></td>
    <td><%= link_to 'Destroy', about, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New about', new_about_path %>